# Server Configuration
SERVER_ADDR=0.0.0.0:8080
DATABASE_URL=sqlite:data/svrctlrs.db

# Servers to Monitor
# Format: name:user@host,name2:user@host2
# Use "localhost" or "local" for local server
SERVERS=localhost,docker-vm:user@docker-vm,nas:user@nas

# SSH Configuration
SSH_KEY_PATH=/path/to/ssh/key

# Gotify Notifications
GOTIFY_URL=http://gotify:8080/message
GOTIFY_KEY=your-gotify-token-here

# ntfy.sh Notifications
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=svrctlrs-alerts

# Plugin Configuration
ENABLE_DOCKER_PLUGIN=true
ENABLE_UPDATES_PLUGIN=true
ENABLE_HEALTH_PLUGIN=true

# Logging
RUST_LOG=info,server=debug
